{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "lib": [
      "DOM",
      "ES2022"
    ]
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
